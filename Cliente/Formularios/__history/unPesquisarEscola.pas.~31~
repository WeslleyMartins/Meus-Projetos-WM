unit unPesquisarEscola;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, unPaiMDI, ExtCtrls, Provider, DB, DBClient, Grids, DBGrids, StdCtrls,
  unDadosClient;

type
  TfmPesquisaEscola = class(TfmPaiMDI)
    Panel4: TPanel;
    DBGrid1: TDBGrid;
    dsEscola: TDataSource;
    procedure SelecionarEscola(Sender: TObject);
    procedure FormShow(Sender: TObject);
  private
    FACodigoDaEscola: string;
  protected
    procedure CreateWindowHandle(const Params: TCreateParams); override;
  public
    class function Listar(AForm: TForm; var ACodigoDaEscola: string): Boolean;
  end;

var
  fmPesquisaEscola: TfmPesquisaEscola;

implementation

{$R *.dfm}

procedure TfmPesquisaEscola.CreateWindowHandle(const Params: TCreateParams);
begin
  inherited;
  FormStyle := fsNormal;
  Visible := False;
  inherited;
end;

procedure TfmPesquisaEscola.FormShow(Sender: TObject);
begin
  inherited;
  FACodigoDaEscola := '';
end;

class function TfmPesquisaEscola.Listar(AForm: TForm; var ACodigoDaEscola: string): Boolean;
var
  Dialogo: TfmPesquisaEscola;
begin
  Dialogo := TfmPesquisaEscola.Create(AForm);
  try
    Result := Dialogo.ShowModal = mrOk;
    if Result then
      ACodigoDaEscola := Dialogo.FACodigoDaEscola;
  finally
    Dialogo.Release;
  end;
end;

procedure TfmPesquisaEscola.SelecionarEscola(Sender: TObject);
begin
  inherited;
  FACodigoDaEscola := dsEscola.DataSet.FieldByName('ESCCOD').AsString;
end;

end.
