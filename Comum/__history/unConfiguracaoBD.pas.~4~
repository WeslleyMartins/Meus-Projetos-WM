unit unConfiguracaoBD;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics,
  Controls, Forms, Dialogs, cxGraphics, cxLookAndFeels,
  cxLookAndFeelPainters, Menus, dxSkinsCore, cxControls, cxContainer,
  cxEdit, cxTextEdit, cxMaskEdit, cxLabel, StdCtrls, cxButtons, ExtCtrls,
  unUteis, WideStrings, DB, SqlExpr;

type
  TfrmConfiguracaoBD = class(TForm)
    Panel1: TPanel;
    btFechar: TcxButton;
    btGravar: TcxButton;
    cxLabel1: TcxLabel;
    edInstanciaBD: TcxMaskEdit;
    cxLabel2: TcxLabel;
    edLogin: TcxMaskEdit;
    cxLabel3: TcxLabel;
    edSenha: TcxMaskEdit;
    Conexao: TSQLConnection;
    procedure btGravarClick(Sender: TObject);
    procedure FormShow(Sender: TObject);
    procedure IrParaProximoControle(Sender: TObject; var Key: Char);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  frmConfiguracaoBD: TfrmConfiguracaoBD;

implementation

{$R *.dfm}

procedure TfrmConfiguracaoBD.btGravarClick(Sender: TObject);
begin
  TutilitarioServidor.GravarDadosConexao('', edInstanciaBD.Text, edLogin.Text, edSenha.Text);
end;

procedure TfrmConfiguracaoBD.FormShow(Sender: TObject);
var
  FInstancia,
  FLogin,
  FSenha: string;
begin
  TutilitarioServidor.LerDadosConexao('', FInstancia, FLogin, FSenha);
  edInstanciaBD.Text := FInstancia;
  edLogin.Text := FLogin;
  edSenha.Text := FSenha;
end;

procedure TfrmConfiguracaoBD.IrParaProximoControle(Sender: TObject;
  var Key: Char);
begin
  if Key = #13 then
    SelectNext(ActiveControl, True, True);
end;

end.
